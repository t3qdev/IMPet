<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="EventSQL">
	


	
	<!--이벤트 특정 범위 리스트 -->
	<select id="selectRangeAll" resultType="hashmap" parameterType="hashmap">
		
		<![CDATA[		
			    
   			select 
   				aa.* 
   			from (   			
   			
				select 
			     	row_number() over(order by 	event_Date) as NO, 
			     	event_NO,
					event_Subject,
					event_Content,
					event_IMG,
					event_Count,
					event_Date							           
		          
		        from 
		        	PET_EVENT 
			 	) a    
			 where 
			 	a.No between ${PAGING}*( ${PAGINGNO} -1)+1 and ${PAGING}*( ${PAGINGNO} )
        	 order by 			 
			 	a.event_Date
        
		]]>
	</select>
	
		
	
	<!--전체 이벤트 카운터수-->
	<select id="selectEventCount" resultType="hashmap">
			
		<![CDATA[		
			 select 
			 	count(*) as count 
			 from 
			 	PET_EVENT 			
			
		]]>
	</select>
	
	
			
	<!--이벤트 상세보기 본 횟수 -->
	<update id="addViewNum" parameterType="hashmap">
		<![CDATA[
		
			update 
				PET_EVENT 
			set 
				event_Count = event_Count+1 
			where 
				event_NO = #{event_NO}									

		]]>
			
	</update>	
	
	
	
	<!-- 갤러리 상세 정보-->
	<select id="selectOne" resultType="hashmap" parameterType="hashmap">
			
		<![CDATA[	
			select
				*
			from 
				PET_EVENT
			where
				event_NO = #{event_NO}							
			

		]]>
	</select>
	
	
	
	
</mapper>