<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="PetReviewSQL">
	
	<sql id="selectAll" > 
		<![CDATA[ SELECT * FROM PET_ITEM_REVIEW ]]>
	</sql>
	
	<sql id="where-re"> 
		<![CDATA[ WHERE REVIEW_NO = #{REVIEW_NO} ]]> 
	</sql>


	<!-- 상품 후기 삭제 -->
	<select id="delete" resultType="hashmap" parameterType="hashmap">
		<include refid="selectAll"/> 
		<include refid="where-re"/>
	</select>
	
	<!-- 상품 후기 수정 -->
	<select id="update" resultType="hashmap" parameterType="hashmap">
		<include refid="selectAll"/> 
		<include refid="where-re"/>
	</select>
	
	<!-- 상품 후기 등록 -->
	<select id="insert" resultType="hashmap" parameterType="hashmap">
		<include refid="selectAll"/> 
		<include refid="where-re"/>
	</select>
	
	<!-- 상품 후기 상세보기 -->
	<select id="selectOne" resultType="hashmap" parameterType="hashmap">
		<include refid="selectAll"/> 
		<include refid="where-re"/>
	</select>
	
	<!-- 상품 후기 리스트 -->
	<select id="selectAll" resultType="hashmap">
		<include refid="selectAll"/>
		<![CDATA[ WHERE ITEM_NO = #{ITEM_NO} ]]>
		<![CDATA[ ORDER BY REVIEW_NO DESC ]]>
	</select>
	
</mapper>